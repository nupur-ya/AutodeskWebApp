@{
    ViewData["Title"] = "Edit Driver";
}

@model AutodeskWebApp.Models.Data.Driver
<style>
    body {
        background-color: rgb(21, 21, 21);
    }
</style>
<h1>@ViewData["Title"]</h1>
@if (Model == null)
{
    <p>Driver not found.</p>
}
else
{
    <form method="post" asp-action="EditDriver">
        <div class="mt-4">  
            <label class="form-label">ID</label>
            <input type="text" disabled class="form-control" placeholder="Enter Driver Name" asp-for="Id" >

        </div>

        <div class="mt-4">  
            <label class="form-label">Name</label>
            <input type="text" required class="form-control" placeholder="Enter Driver Name" asp-for="Name" maxlength="100">

        </div>

        <div class="mt-4">  
            <label class="form-label">Email</label>
            <input type="text" required class="form-control" placeholder="Enter Email" asp-for="Email" maxlength="200">

        </div>

        <div class="mt-4">  
            <label class="form-label">Phone</label>
            <input type="number" required class="form-control" placeholder="Enter Phone Number" asp-for="Phone" maxlength="10">

        </div>

        <div class="mt-4">  
            <label class="form-label">Team</label>
            <input type="text" required class="form-control" placeholder="Enter Team Name" asp-for="Team" maxlength="100" >

        </div>

        <div class="mt-4">  
            <label class="form-label">Home Country</label>
            <input type="text" required class="form-control" placeholder="Enter Home Country" asp-for="HomeCountry" maxlength="100">

        </div>

        <div class="mt-4">  
            <label class="form-label">Headshot URL</label>
            <input type="text" required class="form-control" placeholder="Enter Home Country" asp-for="ImageUrl" maxlength="3000">

        </div>

        <div class="mt-4">  
            <label class="form-label">Driver Number</label>
            <input type="number" required class="form-control" placeholder="Enter Home Country" asp-for="DriverNumber">

        </div>

        
        <div class="mt-4">  
            <input type="checkbox" class="form-check-input" id="IsRacingThisYear" asp-for="IsRacingThisYear" value="true" />
            <label class="form-check-label">Racing This Year</label>
        </div>


        <div class="mt-4">  
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-primary">Reset</button>
            <button type="button" class="btn btn-primary" onclick="window.history.back();">Cancel</button>
        </div>
    </form>

    <form asp-controller="Home" asp-action="DeleteDriver" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this driver?');" style="margin-top: 20px;">
    <button type="submit" class="btn btn-danger">Delete Driver</button>
    </form>

}